<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".view.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:src="@drawable/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/labelTrending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:text="@string/trending"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPagerTrending"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/labelTrending" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="bottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewPagerTrending"
            android:background="@android:color/transparent"
            app:tabBackground="@drawable/tab_selector"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp"
            app:tabPaddingStart="10dp"
            app:tabIndicatorGravity="stretch" />

        <TextView
            android:id="@+id/labelPopularMovie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/popular_movie"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tabs" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycerViewPopularMovie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/labelPopularMovie"
            tools:layout_height="300dp" />

        <TextView
            android:id="@+id/textViewMorePopular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickSeeMore"
            android:text="@string/more"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/recycerViewPopularMovie"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/labelNowPlaying"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/now_playing"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recycerViewPopularMovie" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycerViewNowPlaying"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/labelNowPlaying"
            tools:layout_height="300dp" />

        <TextView
            android:id="@+id/textViewMoreNowPlaying"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickSeeMore"
            android:text="@string/more"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/recycerViewNowPlaying"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/labelUpcoming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/upcoming_movie"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recycerViewNowPlaying" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycerViewUpcoming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/labelUpcoming"
            tools:layout_height="300dp" />

        <TextView
            android:id="@+id/textViewMoreUpcoming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickSeeMore"
            android:text="@string/more"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/recycerViewUpcoming"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/labelTopRated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/top_rated"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recycerViewUpcoming" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycerViewTopRated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/labelTopRated"
            tools:layout_height="300dp" />

        <TextView
            android:id="@+id/textViewMoreTopRated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickSeeMore"
            android:text="@string/more"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/recycerViewTopRated"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>