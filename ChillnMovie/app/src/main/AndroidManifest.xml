<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ntikhoa.chillnmovie">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ChillnMovie"
        android:usesCleartextTraffic="true">
        <activity android:name=".view.MenuActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.TrailerPlayerActivity" />
        <activity
            android:name=".view.EditMovieActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.MovieDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.MovieActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.EditorFrontActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>